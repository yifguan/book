<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topmenu"
        android:background="@color/appgreen"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_topmenu"
            android:background="@null"
            android:textSize="@dimen/big_fontsize"
            android:text="@string/tab_bookmarket">
        </TextView>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bookmarketswipe">

        <ListView
            android:id="@+id/bookmarketlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="10dp"
            android:scrollbars="none"
            android:verticalSpacing="9dp"
            android:footerDividersEnabled="false">
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>